% Letter of Submittal -----------------------------------
%
% Author: Michal Kononenko
%
% Contains the style package to create a letter of submittal for a
% Work Term Report
\NeedsTeXFormat{LaTeX2e}[1994/06/11]
\ProvidesPackage{letter_of_submittal}

% Defines an environment
\newenvironment{letter_of_submittal}[2]{
	
	\def\@lettersignature{#2}
	\setlength{\parindent}{0cm}
	
    \newpage
    \pagenumbering{gobble}

    \@employeraddress

    \vspace*{1\baselineskip}
    
    \today

    \vspace*{1\baselineskip}

    \@programdirector, Director \\
    \@program \\
    \@university \\
    \@universityaddress \\

    \vspace*{1\baselineskip}

    #1
    
    \vspace*{1\baselineskip}
}
{
    \vspace*{1\baselineskip}
	
    \@lettersignature \\

    \vspace{1cm}

    \@author \\
    \@studentnumber

    \clearpage
}

\endinput